<body>
  <header>üåê My Chat Website</header>

  <div id="chat"></div>

  <div id="form">
    <input id="input" type="text" placeholder="Type a message..." autocomplete="off" />
    <button onclick="sendMessage()">Send</button>
  </div>

  <script>
    // --- Name setup with filtering ---
    const bannedWords = ["badword1","badword2","badword3"]; // expand this list
    let username = localStorage.getItem("chatName");

    function setName() {
      let name = prompt("Enter your chat name:");
      if (!name) name = "Guest";
      let lower = name.toLowerCase();
      if (bannedWords.some(word => lower.includes(word))) {
        alert("That name isn‚Äôt allowed. Using Guest instead.");
        name = "Guest";
      }
      username = name;
      localStorage.setItem("chatName", name);
    }

    if (!username) setName();

    // --- Chat logic (local only for now) ---
    const chat = document.getElementById("chat");
    const input = document.getElementById("input");

    function sendMessage() {
      const text = input.value.trim();
      if (!text) return;
      
      // Show message
      addMessage(username, text, true);
      
      input.value = "";
    }

    function addMessage(sender, text, isYou=false) {
      const div = document.createElement("div");
      div.classList.add("message");
      div.classList.add(isYou ? "you" : "other");
      div.textContent = (isYou ? "You: " : sender + ": ") + text;
      chat.appendChild(div);
      chat.scrollTop = chat.scrollHeight;
    }

    // --- Allow Enter key ---
    input.addEventListener("keypress", function(e) {
      if (e.key === "Enter") {
        sendMessage();
      }
    });

    // --- Add a button to change name ---
    const nameBtn = document.createElement("button");
    nameBtn.textContent = "Set Name";
    nameBtn.style.marginLeft = "10px";
    nameBtn.onclick = setName;
    document.getElementById("form").appendChild(nameBtn);
  </script>
</body>
</html>
